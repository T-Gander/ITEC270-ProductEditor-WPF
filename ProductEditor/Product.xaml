<UserControl x:Class="WPFDemo1.Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDemo1"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" Background="Azure">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
        </Grid.RowDefinitions>
        <Rectangle Width="100" Fill="Green"/>
        <StackPanel Grid.Column="1">
            <Label Content="Product Name" x:Name="lblProductName" x:FieldModifier="public"/>
            <Label Content="Product Price" x:Name="lblProductPrice" x:FieldModifier="public"/>
            <Label Content="Product Supplier" x:Name="lblProductSupplier" x:FieldModifier="public"/>
            <Label Content="Product Category" x:Name="lblProductCategory" x:FieldModifier="public"/>
        </StackPanel>
    </Grid>
</UserControl>
